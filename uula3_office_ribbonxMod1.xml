                                        <button id="Button4" imageMso="SmartArtAddBullet" size="large" label="Bullets" screentip="Change Bullet Character and Indentation" onAction="Bullets.Bullets" />
                                        <button id="Button5" imageMso="HeaderInsertGallery" size="large" label="Unit Header" screentip="Change the color of unit header" onAction="UnitColor.UnitColor" />
                                        <button id="Button6" imageMso="ViewRulerWord" size="large" label="Tab Stop" screentip="Insert a tab stop for blank lines" onAction="BlankLines1.BlankLines1" />

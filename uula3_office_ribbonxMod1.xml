<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui">
        <ribbon startFromScratch="false">
                <tabs>
                        <tab id="CustomTab" insertBeforeMso="TabHome" label="UULA">
                                <group id="SimpleControls" label="Study-Guide 3">
                                        <button id="Button1" imageMso="ThemeFontsGallery" size="large" label="Avenir" screentip="Change font to Avenir" onAction="FontChange.FontChange" />
                                        <button id="Button2" imageMso="ThemeFontsGallery" size="large" label="Font Size" screentip="Change font Size" onAction="ChangeFontSize.ChangeFontSize" />

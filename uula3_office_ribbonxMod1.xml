                                        <button id="Button18" imageMso="ActiveXTextBox" size="normal" label="Complete Answer" screentip="Format as Complete Answer" onAction="CompleteAnsEN.CompleteAnsEN" />
                                        <button id="Button19" imageMso="ActiveXTextBox" size="normal" label="Complete Answer Long" screentip="Format as Long Complete Answer" onAction="CompleteAnsLongEN.CompleteAnsLongEN" />
                                </group>
                        </tab>
                </tabs>

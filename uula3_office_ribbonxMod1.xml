                                        <button id="Button13" imageMso="ActiveXTextBox" size="normal" label="Complete Answer Long" screentip="Format as Long Complete Answer" onAction="CompleteAnsLong.CompleteAnsLong" />
                                </group>

                                <group id="SimpleControls3" label="English Style Guide">
                                        <button id="Button14" imageMso="TextBoxDrawMenu" size="normal" label="Answer" screentip="Format as Answer" onAction="AnswerFormatEN.AnswerFormatEN" />
                                        <button id="Button15" imageMso="SmartArtInsertBulletRTL" size="normal" label="Bulleted Answer" screentip="Format as Bulleted Answer" onAction="BulletAnswersEN.BulletAnswersEN" />
